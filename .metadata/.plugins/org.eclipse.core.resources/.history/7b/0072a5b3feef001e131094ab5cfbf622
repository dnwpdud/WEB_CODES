<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>로그인 결과 페이지</title>
</head>
<body>

	 
<%
	
	// practiceLogin.jsp에서 saveAgreed가 체크가 되어 있으면
	// id, pw에 대한 쿠키를 생성한다.
	// 쿠키 만료 시간은 10분으로 설정
	request.setCharacterEncoding("UTF-8");
	String idName = request.getParameter("idName");
	String pwName = request.getParameter("pwName");
	Cookie idNameCookie = new Cookie("idName", idName);
	Cookie pwNameCookie = new Cookie("pwName", pwName);
	
	idNameCookie.setMaxAge(60 * 10 * 1);
	pwNameCookie.setMaxAge(60 * 10 * 1);
	
	response.addCookie(idNameCookie);
	response.addCookie(pwNameCookie);
%>
	<h2>로그인 결과 화면</h2>
	<p><%=request.getParameter("id") %></p>
	
</body>
</html>